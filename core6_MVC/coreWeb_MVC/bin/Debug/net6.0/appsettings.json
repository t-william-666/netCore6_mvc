//项目配置文件
{
  //配置日志记录
  //LogLevel 表示日志的严重性，范围为 0 到 6。
  //Trace(跟踪) = 0、Debug(调试) = 1、Information(消息) = 2、Warning(警告) = 3、Error(错误) = 4、Critical(严重) = 5 和 None() = 6
  "Logging": {
    "LogLevel": { // No provider, LogLevel applies to all the enabled providers.》》没有提供程序，LogLevel适用于所有启用的提供程序。
      "Default": "Error",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning"
    },
    "Debug": { // Debug provider.》》调试提供程序。
      "LogLevel": {
        "Default": "Information" // Overrides preceding LogLevel:Default setting.》》覆盖之前的日志级别：默认设置。
      }
    },
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Microsoft.AspNetCore.Mvc.Razor.Internal": "Warning",
        "Microsoft.AspNetCore.Mvc.Razor.Razor": "Debug",
        "Microsoft.AspNetCore.Mvc.Razor": "Error",
        "Default": "Information"
      }
    },
    "EventSource": {
      "LogLevel": {
        "Microsoft": "Information"
      }
    },
    "EventLog": {
      "LogLevel": {
        "Microsoft": "Information"
      }
    },
    "AzureAppServicesFile": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "AzureAppServicesBlob": {
      "IncludeScopes": true,
      "LogLevel": {
        "Microsoft": "Information"
      }
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  ////数据库连接的连接字符串
  "ConnectionStrings": {
    //"SqlServerConnection": "server=172.20.0.179;database=MMZDB;User ID=sa;password=Test123;MultipleActiveResultSets=true",
    "SqlServerConnection": "Server=.;Database=TestDB;Trusted_Connection=True;User ID=sa;Password=123456;",
    "OracleConnection": "",
    "MySqlConnection": ""
  },
  "AllowedHosts": "*",
  ////使用JWT Bearer 颁发 TOKEN 做用户权限验证
  "JWT": {
    "SecretKey": "assdfghkldsf@123!", //加密解密Token的密钥
    "Issuer": "weijinyao", //发布者名称
    "Expires": 10, //令牌有效时间
    "Audience": "22333" //订阅者名称
  }

}
